<%= simple_form_for(@client) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :mobile %>
    <%= f.input :street_address1 %>
    <%= f.input :street_address2 %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :pin %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
